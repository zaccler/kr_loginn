<Page x:Class="kr_loginn.Autho"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     xmlns:local="clr-namespace:kr_loginn"
     mc:Ignorable="d" 
     d:DesignHeight="450" d:DesignWidth="800"
     Title="AuthPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="tbLogin" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="tbPassword" Margin="0,0,0,10"/>
            <Button x:Name="btnEnter" Content="Авторизоваться" Click="btnEnter_Click"/>
            <Frame x:Name="MainFrame"/>
        </StackPanel>
    </Grid>
</Page>